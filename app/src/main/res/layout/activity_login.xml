<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include
        android:id="@+id/topInclude"
        layout="@layout/include_toolbar"/>

    <LinearLayout
        android:id="@+id/contentLinearLayout"
        style="@style/Layout_Login">

        <EditText
            android:id="@+id/usernameEditText"
            style="@style/EditText_Username"/>

        <EditText
            android:id="@+id/passwordEditText"
            style="@style/EditText_Password"/>

    </LinearLayout>

    <TextView
        android:id="@+id/loginTextView"
        style="@style/TextView_Login" />

    <RelativeLayout
        style="@style/Layout_HeightWarp"
        android:paddingLeft="24dip"
        android:paddingRight="24dip">

        <TextView
            android:id="@+id/regTextView"
            style="@style/TextView_LoginTips"
            android:text="注册账号" />

        <TextView
            android:id="@+id/backTextView"
            style="@style/TextView_LoginTips"
            android:layout_alignParentRight="true"
            android:text="找回密码" />

    </RelativeLayout>
</LinearLayout>